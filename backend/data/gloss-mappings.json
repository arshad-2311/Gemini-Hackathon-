    "grammar_rules": {
        "question_markers": {
            "wh_questions": {
                "position": "end",
                "facial": "eyebrows_furrowed"
            },
            "yes_no_questions": {
                "position": "end",
                "facial": "eyebrows_raised"
            }
        },
        "negation": {
            "position": "after_verb",
            "facial": "head_shake"
        },
        "topic_comment": {
            "topic_position": "start",
            "facial": "eyebrows_raised"
        }
    },
    "word_order_transforms": [
        {
            "pattern": "what is your (\\w+)",
            "asl_order": [
                "YOU",
                "$1",
                "WHAT"
            ],
            "example": "what is your name → YOU NAME WHAT"
        },
        {
            "pattern": "how are you",
            "asl_order": [
                "YOU",
                "HOW"
            ],
            "example": "how are you → YOU HOW"
        },
        {
            "pattern": "i am (\\w+)",
            "asl_order": [
                "ME",
                "$1"
            ],
            "example": "i am happy → ME HAPPY"
        },
        {
            "pattern": "do you (\\w+)",
            "asl_order": [
                "YOU",
                "$1"
            ],
            "example": "do you understand → YOU UNDERSTAND"
        },
        {
            "pattern": "can you (\\w+) me",
            "asl_order": [
                "YOU",
                "$1",
                "ME",
                "CAN"
            ],
            "example": "can you help me → YOU HELP ME CAN"
        }
    ]
}